<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="6dp"
    android:background="@android:color/white"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fond"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="20dp"
            android:text="Task Title"
            android:textColor="#8400FF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAppearance="@color/material_dynamic_neutral30"/>

        <TextView
            android:id="@+id/task_due_date"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:drawableStart="@android:drawable/ic_menu_today"
            android:drawablePadding="10dp"
            android:text="Due Date"
            android:textColor="#E91E1E"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/task_label"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:drawableStart="@android:drawable/ic_dialog_info"
            android:drawablePadding="10dp"
            android:text="Description"
            android:textColor="#8400FF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>